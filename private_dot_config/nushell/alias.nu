alias cat = bat
alias ca = bat --style=plain

alias cd = z
alias cdi = zi

alias ll = ls -l
alias la = ls -la

alias find = fd
alias fda = fd --hidden --no-ignore

alias grep = rg --color=always --line-number --smart-case
alias gri = rg --color=always --line-number --no-heading -i

alias tree = eza --tree --level=3 --icons=always --color=always --git
alias df = duf
alias diff = delta

