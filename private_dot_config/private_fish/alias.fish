abbr cat bat
alias ca 'bat --style=plain'

abbr cd z
abbr cdi zi

abbr ls eza
alias l 'eza --color=always --group-directories-first'
alias ll 'eza -l --color=always --git --time-style long-iso --group-directories-first'
alias la 'eza -la --color=always --git --time-style long-iso --group-directories-first'
alias lt 'eza --tree --level=3 --color=always --git'
alias ltt 'eza --tree --level=4 --color=always --git'

abbr find fd
alias fda 'fd --hidden --no-ignore'

abbr grep rg
alias gr 'rg --color=always --line-number --smart-case'
alias gri 'rg --color=always --line-number --no-heading -i'

alias tree 'eza --tree --level=3 --icons --git'
abbr du dust
abbr df duf

abbr diff delta
